
{
  "manifest_version": 3,
  "name": "Web Journey Recorder Pro",
  "version": "1.2.1",
  "description": "Herramienta profesional para grabar recorridos de usuario, generar documentaci√≥n y scripts de prueba con IA.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Web Journey Recorder"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "icons": {
    "128": "assets/icon-128.png"
  }
}
