
{
  "manifest_version": 3,
  "name": "Web Journey Recorder Pro",
  "version": "1.3.2",
  "description": "Grabador profesional de recorridos con IA Gemini y generación de documentación.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "unlimitedStorage",
    "contextMenus",
    "sidePanel"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Web Journey Recorder"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "commands": {
    "toggle-recording": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Iniciar/Detener Grabación"
    }
  }
}
