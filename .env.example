# --- CLIENT SIDE VARIABLES (Prefix with NEXT_PUBLIC_) ---

# Activa el modo debug para el renderizado de partituras (OSMD)
NEXT_PUBLIC_OSMD_DEBUG=false

# Frecuencia de muestreo preferida para el AudioContext
NEXT_PUBLIC_AUDIO_SAMPLE_RATE=44100

# URL de la API de telemetría (Vercel Analytics o similar)
NEXT_PUBLIC_TELEMETRY_URL=https://analytics.example.com

# Feature Flag: Usar Audio Worklet en lugar de ScriptProcessor (experimental)
NEXT_PUBLIC_FF_AUDIO_WORKLET=false


# --- SERVER SIDE VARIABLES ---

# API Key para servicios externos (si aplica)
EXTERNAL_SERVICE_API_KEY=your_key_here

# Entorno de ejecución (development, staging, production)
NODE_ENV=development
